{{#extends 'base'}}
{{#block 'content'}}
<h1>All Books</h1>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>ISBN</th>
            <th></th>
        </tr>
   </thead>
     {{#each books}}
            <tr>
                <td >{{this.id}}</td>
                <td >{{this.title}}</td>
                <td >{{this.isbn}}</td>
           
    <td><a href="/books/create" class="btn btn-primary">Add</a>
     <a href="/books/update/{{this.id}}" class="btn btn-secondary">Update</a>
      <a href="/books/delete/{{this.id}}" class="btn btn-danger">Delete</a></td>
      </tr>
       
        {{/each}}
        </table>
{{/block}}
{{/extends}}